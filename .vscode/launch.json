    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Weather Map",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/controller.py",
            "cwd": "${workspaceFolder}/..",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WeatherMapConfig",
            "program": "${workspaceFolder}/MapConfig/build/index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Python: Configuration Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/check_configuration_server.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}